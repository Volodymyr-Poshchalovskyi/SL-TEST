generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  posts        Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  createdAt DateTime @default(now())
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}